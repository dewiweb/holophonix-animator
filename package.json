{
  "name": "holophonix-animator-v2",
  "version": "2.0.1-beta",
  "description": "Modern 3D sound animation system for Holophonix processors",
  "type": "module",
  "main": "main.cjs",
  "homepage": "./",
  "author": {
    "name": "Holophonix Animator Team",
    "email": "contact@holophonix-animator.com"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "format": "prettier --write .",
    "type-check": "tsc --noEmit",
    "compile:electron": "tsc -p tsconfig.electron.json",
    "electron": "electron .",
    "electron:dev": "cross-env NODE_ENV=development concurrently \"npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "build:electron": "cross-env NODE_ENV=production npm run build && electron-builder",
    "build:win": "cross-env NODE_ENV=production npm run build && electron-builder --win",
    "build:linux": "cross-env NODE_ENV=production npm run build && electron-builder --linux",
    "build:deb": "cross-env NODE_ENV=production npm run build && electron-builder --linux deb",
    "build:appimage": "cross-env NODE_ENV=production npm run build && electron-builder --linux AppImage",
    "dist": "npm run build:electron"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.17.1",
    "@types/three": "^0.159.0",
    "clsx": "^2.1.1",
    "framer-motion": "^10.16.16",
    "lucide-react": "^0.303.0",
    "osc": "^2.4.5",
    "osc-js": "^2.4.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.21.1",
    "reactflow": "^11.10.1",
    "tailwind-merge": "^3.3.1",
    "three": "^0.159.0",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@types/node": "^24.7.1",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^1.1.3",
    "@vitest/ui": "^1.1.3",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "cross-env": "^10.1.0",
    "electron": "^28.1.4",
    "electron-builder": "^24.9.1",
    "eslint": "^8.56.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "jsdom": "^27.0.0",
    "postcss": "^8.4.33",
    "prettier": "^3.1.1",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.10",
    "vitest": "^1.1.3",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.holophonix.animator",
    "productName": "Holophonix Animator v2",
    "directories": {
      "output": "release",
      "buildResources": "assets"
    },
    "files": [
      "main.cjs",
      "main.cjs.map",
      "preload.cjs",
      "preload.cjs.map",
      "dist/**/*",
      "!dist/builder-*",
      "!dist/win-unpacked",
      "!dist/linux-unpacked"
    ],
    "linux": {
      "target": [
        "deb",
        "AppImage"
      ],
      "category": "AudioVideo",
      "icon": "assets/icon.png",
      "maintainer": "Holophonix Animator Team <contact@holophonix-animator.com>",
      "description": "Modern 3D sound animation system for Holophonix processors",
      "synopsis": "3D sound spatialisation control and animation tool"
    },
    "deb": {
      "depends": [
        "gconf2",
        "gconf-service",
        "libnotify4",
        "libappindicator1",
        "libxtst6",
        "libnss3"
      ]
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
