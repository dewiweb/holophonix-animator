{
  "name": "holophonix-animator",
  "version": "0.1.0",
  "description": "Holophonix spatial audio animation tool",
  "main": "dist/index.js",
  "scripts": {
    "start": "electron .",
    "build": "npm run build:rust && tsc && webpack --mode production",
    "build:rust": "cargo-cp-artifact -nc index.node -- cargo build --message-format=json-render-diagnostics",
    "build:debug": "npm run build:rust -- --debug",
    "dev": "concurrently \"tsc -w\" \"webpack serve --mode development\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "install": "npm run build:rust"
  },
  "dependencies": {
    "@blueprintjs/core": "^5.16.0",
    "@reduxjs/toolkit": "^2.0.1",
    "@napi-rs/cli": "^2.17.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^9.0.4",
    "react-router-dom": "^6.21.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@testing-library/react-hooks": "^8.0.1",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.4",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.17",
    "cargo-cp-artifact": "^0.1.8",
    "concurrently": "^8.2.2",
    "css-loader": "^6.8.1",
    "electron": "^28.0.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "style-loader": "^3.3.3",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  },
  "napi": {
    "name": "holophonix-animator",
    "triples": {
      "defaults": true,
      "additional": [
        "x86_64-pc-windows-msvc",
        "x86_64-unknown-linux-gnu",
        "x86_64-apple-darwin"
      ]
    }
  }
}
